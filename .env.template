# Environment variables for COBOL RAG Chatbot
# Copy this to .env file in the same directory

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://az-use1-ai-search.search.windows.net
AZURE_SEARCH_KEY=your_azure_search_admin_key_here

# RAG Configuration
MAX_SEARCH_RESULTS=20
MAX_MEMORY_EXCHANGES=5
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
